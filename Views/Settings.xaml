<Window x:Class="LaravelLauncher.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaravelLauncher"
        mc:Ignorable="d"
        Title="Settings" Height="393" Width="363">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FF4E2525"/>
                <GradientStop Color="#FF800808" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Label x:Name="SettingsTitle" Content="Paramètres" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FFAB7E00"/>
        <Grid HorizontalAlignment="Center" Height="77" Margin="0,92,0,0" VerticalAlignment="Top" Width="373">
            <Button x:Name="OpenFileSystembtn" Content="Sélectionner l'éxécutable" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top" Click="OpenFileSystemBtn_Click"/>
            <Label x:Name="pathToExecLabel" Content="Sélectionnez le chemin vers votre système apache" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="373" HorizontalContentAlignment="Center" FontSize="10"/>
            <Label Content="Gestionnaire serveur php (Wamp, Xampp, etc...)" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Arial Black" Height="26" Width="373" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        </Grid>

    </Grid>
</Window>
